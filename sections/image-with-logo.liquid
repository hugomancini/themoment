<section id="section-{{ section.id }}" data-section-id="{{ section.id }}">
	{%- if section.settings.title != blank -%}
      <h2 class="SectionHeader__Heading Heading u-h1 mid-size-title">{{ section.settings.title | escape }}</h2>
    {%- endif -%}
	<div class="Grid">
	{%- for block in section.blocks -%}
		<div class="Grid__Cell 1/2--phone 1/2--tablet 1/3--lap-and-up">
			<img src="{{ block.settings.image | img_url: 'master' }}" alt="">
			{%- if block.settings.content != blank -%}
				<p>{{ block.settings.content }}</p>
			{% endif %}
		</div>
	{%- endfor -%}
	</div>
</section>

{% schema %}
{
  "name": "Image with logo",
  "class": "shopify-section section-presse",
  "max_blocks": 6,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
	{
	  "type": "logo",
  	  "name": "logo",
  	  "settings": [
		{
	      "type": "image_picker",
	      "id": "image",
	      "label": "Image",
	      "info": "1200 x 1200px .png recommended"
		},
		{
		  "type": "richtext",
      	  "id": "content",
      	  "label": "Text",
      	  "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
		}
	  ]
	}
  ],
  "presets": [
    {
      "category": "Advanced",
      "name": "Image with logo",
      "settings": {}
    }
  ]
}
{% endschema %}