    a {
      text-decoration: none;
    }
  }

  .Form__Submit {
    margin: 0 !important;
  }

  .SectionHeader__Heading {
    width: 650px !important;
    font-size: 3vw;
    letter-spacing: 0vw;
    line-height: 1;
    color: black !important;
    margin-block-end: 16px;
    text-align: center;
    min-width: 700px;
  }
}

.yotpo-label {
  display:none;
}

.insta-title {
  font-size: 10vw;
  line-height: 0.8;
  margin-top: 100px !important;
}
.insta-username {
  margin-top: 1px !important;
  font-size: 3vw;
  text-align: center;
  text-decoration: underline;
  letter-spacing: 0vw;
}


// CONTACT PAGE

#shopify-section-page-contact-template {

  .PageHeader {
    margin: 40px 0 20px 0 !important;
  }

  #contact_title {
    line-height: 0.8;
  }

  .contact_description {
    text-align: center;
    font-weight: 900;
    max-width: 690px;
    line-height: 1.2;
  }

  .PageContent {
    margin-top: 0 !important;

    .Rte .Form {
      margin-top: 2rem !important;
    }

    .Form__Submit {
      font-weight: 600;
    }
  }
}



#shopify-section-1576161138248 {

  .flickity-prev-next-button {
    display:none;
  }
  .SectionHeader {
    margin-top: 0px !important;
    margin-bottom: 0px !important;
  }
}

#section-1573035885338 {
  margin-top: 0px !important;
}

.template-index {
  .Slideshow__Content--topLeft {
    text-align: left;

    .ButtonGroup {
      justify-content: flex-start;
    }
  }
  .Slideshow__Content--topRight {
    text-align: right;

    .ButtonGroup {
      justify-content: flex-end;
    }
  }
  .Slideshow__Content--topLeft,
  .Slideshow__Content--topCenter,
  .Slideshow__Content--topRight {
    bottom: auto;
    top: 34px;
    left: 0;
    transform: none;
  }
  .Slideshow__Content {
    @media screen and (min-width: 641px){
      .SectionHeader__Heading--emphasize {
          font-size: 91px;
          letter-spacing: 2px;
          line-height: 86px;
          margin-bottom: 0;
          //font-family: Futura,Trebuchet MS,Arial,sans-serif !important;
      }
      .SectionHeader__ButtonWrapper {
        margin-top: 50px;
      }
    }
  }
  .section-tags {
    .FeatureText__ContentWrapper__Intro {
      width: 100%;
      margin-bottom: 40px;
      .FeatureText__Content {
        max-width: 100% !important;

        .SectionHeader {
          width: 100%;
        }
      }
      .Rte {
        width: 40%;
        margin: auto;
        text-align: center;
        font-size: 1.2rem;
        font-weight: 300;
      }
    }
    .FeatureText__Content {
      .Heading {
        text-align: center;
      }
    }
    .Linklist {
      width: 93%;
      font-size: 1.7rem;
      font-weight: 300;
      text-align: center;
      margin: auto;
      .Linklist__Item, .Link {
        display: inline;
      }
      .Link {
        text-transform: uppercase;
      }
    }
  }
  .featured-collection {
    margin-top: 120px;
    .SectionFooter {
      @media (min-width: 1008px) {
        margin-top: 50px;
      }
    }
  }
  .section-presse {
    margin-top: 100px;
    padding-bottom: 50px;
    .Grid {
      display: flex;
      .Grid__Cell {
        display: inline-flex;
        flex-direction: column;

        img {
          max-width: 50%;
          margin: auto;
        }

        p {
          text-align: center;
        }
      }
    }
  }
}

/* COLLECTIONS */
.template-collection {
  .mid-size-title {
    margin-bottom: 20px;
  }
  .SectionHeader__Description {
      max-width: 50%;
  }
  .CollectionInner__Sidebar {
    position: fixed;
    top: 50% !important;
    z-index: 9999;
    .Linklist__Item>.Link {
      text-transform: uppercase;
    }
  }
}















