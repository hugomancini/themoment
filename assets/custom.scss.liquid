    width: 100%;
    margin-top: 50px;
    display: flex;
    justify-content: space-around;
  }

  .input-container {
    width: 100%;
    margin-bottom: 17px;
    border-bottom: solid 1px black;
  }

  .Form__Input {
    text-transform: uppercase;
    font-weight: 100;
    text-align: center;
    border: none;
    -webkit-appearance: textarea;
